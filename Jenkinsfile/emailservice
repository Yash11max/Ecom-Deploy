pipeline {
    agent any

    tools {
        jdk 'jdk 17'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_NAME  = 'shankyash/emailservice'
        IMAGE_NAME   = 'emailservice'
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Yash11max/Ecom-Deploy.git'
            }
        }

        // ---- Python Virtual Environment (ONE TIME) ----
        stage('Setup Python venv') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        python3 -m venv .venv
                        . .venv/bin/activate
                        pip install --upgrade pip
                    '''
                }
            }
        }

        // ---- SAST: Bandit ----
        stage('Bandit Security Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install bandit
                        bandit -r . -f json -o bandit-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/bandit-report.json'
                }
            }
        }

        // ---- SonarQube ----
        stage('SonarQube Analysis') {
            steps {
                dir('src/emailservice') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                        $SCANNER_HOME/bin/sonar-scanner \
                          -Dsonar.projectKey=emailservice \
                          -Dsonar.projectName=emailservice \
                          -Dsonar.sources=. \
                          -Dsonar.language=py
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        // ---- Install App Dependencies ----
        stage('Install Dependencies') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        // ---- SCA: Safety ----
        stage('Safety Dependency Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install safety
                        safety check -r requirements.txt --json > safety-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/safety-report.json'
                }
            }
        }

        // ---- Trivy FS ----
        stage('Trivy File Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        trivy fs . \
                          --severity CRITICAL,HIGH \
                          --scanners vuln,misconfig,secret \
                          --exit-code 1 > trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-fs-report.txt'
                }
            }
        }

        // ---- Docker Build ----
        stage('Build Docker Image') {
            steps {
                dir('src/emailservice') {
                    script {
                        env.IMAGE_TAG = "${DOCKER_NAME}:${BUILD_NUMBER}"
                        sh '''
                            docker build -t ${IMAGE_NAME} .
                            docker tag ${IMAGE_NAME} ${IMAGE_TAG}
                        '''
                    }
                }
            }
        }

        // ---- Push Image ----
        stage('Push to DockerHub') {
            steps {
                dir('src/emailservice') {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh '''
                            echo "$dockerpwd" | docker login -u shankyash --password-stdin
                            docker push ${IMAGE_TAG}
                            docker tag ${IMAGE_NAME} ${DOCKER_NAME}:latest
                            docker push ${DOCKER_NAME}:latest
                        '''
                    }
                }
            }
        }

        // ---- Trivy Image Scan ----
        stage('Trivy Scan Image') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        trivy image -f json -o trivy-image-email.json ${IMAGE_TAG}
                        trivy image -f table -o trivy-image-email.txt ${IMAGE_TAG}
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-image-email.*'
                }
            }
        }
    }

    post {
        always {
            emailext (
                subject: "Pipeline ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <p>Emailservice DevSecOps pipeline completed.</p>
                    <p>Status: ${currentBuild.currentResult}</p>
                    <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: 'shankhwalkary11@gmail.com',
                mimeType: 'text/html'
            )
        }
    }
}
