pipeline {
    agent any

    tools {
        jdk 'jdk 17'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_NAME  = 'shankyash/emailservice'
        IMAGE_NAME   = 'emailservice'
        PATH = "$HOME/.pyenv/shims:$HOME/.pyenv/bin:$PATH"
    }

    stages {

        /* ================= CLEAN ================= */
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        /* ================= GIT ================= */
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Yash11max/Ecom-Deploy.git'
            }
        }

        /* ================= PYTHON SETUP ================= */
        stage('Setup Python venv') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        command -v python || pyenv global 3.11.9
                        python --version
                        python -m venv .venv
                        . .venv/bin/activate
                        pip install --upgrade pip
                    '''
                }
            }
        }

        /* ================= SAST: BANDIT ================= */
        stage('Bandit Security Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install bandit
                        bandit -r . -f json -o bandit-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'src/emailservice/bandit-report.json', allowEmptyArchive: true
                }
            }
        }

        /* ================= SAST: SONARQUBE ================= */
        stage('SonarQube Analysis') {
            steps {
                dir('src/emailservice') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                            $SCANNER_HOME/bin/sonar-scanner \
                              -Dsonar.projectKey=emailservice \
                              -Dsonar.projectName=emailservice \
                              -Dsonar.sources=. \
                              -Dsonar.language=py
                        '''
                    }
                }
            }
        }

        /* ================= QUALITY GATE ================= */
        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }

        /* ================= DEPENDENCIES ================= */
        stage('Install Dependencies') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        /* ================= SCA: SAFETY ================= */
        stage('Safety Dependency Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        . .venv/bin/activate
                        pip install safety
                        safety check -r requirements.txt --json > safety-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/safety-report.json'
                }
            }
        }

        /* ================= TRIVY FS ================= */
        stage('Trivy File Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        command -v trivy || exit 0
                        trivy fs . \
                          --severity HIGH,CRITICAL \
                          --exit-code 0 \
                          --scanners vuln,misconfig,secret \
                          > trivy-fs-report.txt
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-fs-report.txt'
                }
            }
        }

        /* ================= DOCKER BUILD ================= */
        stage('Build Docker Image') {
            steps {
                dir('src/emailservice') {
                    script {
                        env.IMAGE_TAG = "${DOCKER_NAME}:${BUILD_NUMBER}"
                        sh '''
                            docker build -t ${IMAGE_NAME} .
                            docker tag ${IMAGE_NAME} ${IMAGE_TAG}
                        '''
                    }
                }
            }
        }

        /* ================= DOCKER PUSH ================= */
        stage('Push Docker Image') {
            steps {
                dir('src/emailservice') {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'DOCKER_PWD')]) {
                        sh '''
                            echo "${DOCKER_PWD}" | docker login -u shankyash --password-stdin
                            docker push ${IMAGE_TAG}
                            docker tag ${IMAGE_TAG} ${DOCKER_NAME}:latest
                            docker push ${DOCKER_NAME}:latest
                        '''
                    }
                }
            }
        }

        /* ================= TRIVY IMAGE ================= */
        stage('Trivy Image Scan') {
            steps {
                dir('src/emailservice') {
                    sh '''
                        command -v trivy || exit 0
                        trivy image -f json -o trivy-image.json ${IMAGE_TAG}
                        trivy image -f table -o trivy-image.txt ${IMAGE_TAG}
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-image.*'
                }
            }
        }
    }

    /* ================= EMAIL ================= */
    post {
        always {
            emailext (
                subject: "Emailservice Pipeline ${currentBuild.currentResult} | Build #${env.BUILD_NUMBER}",
                body: """
                    <h3>Emailservice DevSecOps Pipeline</h3>
                    <p><b>Status:</b> ${currentBuild.currentResult}</p>
                    <p><b>Build:</b> #${env.BUILD_NUMBER}</p>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>URL:</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: 'shankhwalkary11@gmail.com',
                mimeType: 'text/html',
                attachmentsPattern: '''
                    src/emailservice/bandit-report.json,
                    src/emailservice/safety-report.json,
                    src/emailservice/trivy-fs-report.txt,
                    src/emailservice/trivy-image.json,
                    src/emailservice/trivy-image.txt
                '''
            )
        }
    }
}
